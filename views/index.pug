extends ./layouts/common

block content
	.container-fluid
		.row
			.col-sm-6
				.card
					.card-block.p-3
						h4.card-title Daily Sales
						.text-right
							h2.font-light.m-b-0
								i.ti-arrow-up.text-success
								|  $120
							span.text-muted Todays Income
						span.text-success 80%
						.progress
							.progress-bar.bg-success(role='progressbar', style='width: 80%; height: 6px;', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
			.col-sm-6
				.card
					.card-block.p-3
						h4.card-title Weekly Sales
						.text-right
							h2.font-light.m-b-0
								i.ti-arrow-up.text-info
								|  $5,000
							span.text-muted Todays Income
						span.text-info 30%
						.progress
							.progress-bar.bg-info(role='progressbar', style='width: 30%; height: 6px;', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
