	body
		.loader
		#main-wrapper
			header.topbar
				nav.navbar.navbar-expand-lg.top-navbar
					#navbarNavDropdown.collapse.navbar-collapse
						ul.navbar-nav.mr-auto.mt-md-0
							li.nav-item
								a.nav-link.text-light Milcash
						if user
							ul.navbar-nav
								li.nav-item.dropdown
									a#navbarDropdownMenuLink.nav-link.dropdown-toggle.text-light(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
										img(src=user.avatar, width="40")
