extends ../layouts/common

block content

	h1 Edit Product

	if errors
		each error in errors
			.alert.alert-danger= error
	form(action="" , method="POST" ,enctype="multipart/form-data")
		.form-group.mt-4
			label(for="name") Name Product
			input(name="name" type="text" class="form-control w-50" value=product.name )
		.form-group
			label(for="price") Price
			input(name="price" type="text" class="form-control w-50" value=product.price)
		.form-group
			label(for="image") Image
			input(name="image" id="image" type="file" 
				multiple="multiple" 
				class="form-control-file w-50"
				)
			each image in product.images
				img.m-3(src=image.url, width="100")

		input.btn.btn-primary(type="submit", value="Edit" )
