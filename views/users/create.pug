extends ../layouts/common

block content

	h1 Create User

	if errors
		each error in errors
			.alert.alert-danger= error

	form.w-50(action="/users/create", method="POST", enctype="multipart/form-data")
		.form-group
			label(for="fullname") Fullname
			input#name.form-control(name="fullname", type="text", value=values ? values.fullname : "")
		.form-group
			label(for="username") Username
			input#name.form-control(name="username", type="text", value=values ? values.username : "")
		.form-group
			label(for="password") Password
			input#phone.form-control(name="password", type="password", value=values ? values.password : "")
		.form-group
			label(for="avatar") Avatar
			input#avatar.form-control-file(name="avatar", type="file")

		button(class="btn btn-primary mt-3" ) Create