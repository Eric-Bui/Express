extends ../layouts/common

block content

	h1 Create User

	if errors
		each error in errors
			.alert.alert-danger= error

	form.w-50(action="/users/create", method="POST", enctype="multipart/form-data")
		.form-group
			label(for="name") Name
			input#name.form-control(name="name", type="text", value=values ? values.name : "")
		.form-group
			label(for="email") Email
			input#name.form-control(name="email", type="text", value=values ? values.email : "")
		.form-group
			label(for="password") Password
			input#phone.form-control(name="password", type="password", value=values ? values.password : "")
		.form-group
			label(for="avatar") Avatar
			input#avatar.form-control-file(name="avatar", type="file")

		button(class="btn btn-primary mt-3" ) Create
